#include "GroceryItem.hpp"

GroceryItem::GroceryItem(std::string n, float p) {
    // constructor
    name = n;
    price = p;
}

GroceryItem::GroceryItem(std::string n, float p, float w) {
    // constructor
    name = n;
    price = p;
    weight = w;
}

std::string GroceryItem::getDescription() {
    // returns name of item
    return name;
}

float GroceryItem::getPrice() {
    // returns price
    return price;
}

float GroceryItem::getWeight() {
    // returns weight
    return weight;
}
